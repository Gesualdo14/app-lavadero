---
export const description =
  "An products dashboard with a sidebar navigation. The sidebar has icon navigation. The content area has a breadcrumb and search in the header. It displays a list of products in a table with actions.";

import "@/styles/globals.css";
import Layout from "@/layouts/Layout.astro";
import Panels from "@/components/custom-ui/Panels";

const user = Astro.locals.user;
console.log("INDEX", { user: Astro.locals.user });

if (!user) {
  Astro.cookies.set("jwt", "", {
    httpOnly: true,
    expires: new Date(),
    maxAge: 0,
    path: "/",
    sameSite: "strict",
  });
  return Astro.redirect("/login");
}
---

<Layout title="Main page">
  <Panels client:load searchParams={Astro.url.searchParams.get("search")} />
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }

  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
</style>
